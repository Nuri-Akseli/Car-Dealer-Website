
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>Başaran DashBoard</title>

    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">

    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

    <link rel="stylesheet" href="~/Templates/AdminLTE-3.0.4/dist/css/adminlte.min.css">

    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">


        <aside class="main-sidebar sidebar-dark-primary elevation-4">

            <a href="index3.html" class="brand-link">
                <img src="~/Templates/images/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-weight-light">Admin Panel</span>
            </a>


            <div class="sidebar">


                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item has-treeview menu-open">
                            <a href="/DashBoardWelcome/Index" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Dashboard
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Hesap İşlemleri
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/AdminAccount/EditProfile" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Hesabımı Güncelle</p>
                                    </a>
                                </li>
                            </ul>
                            @if (User.IsInRole("Supervisor") || User.IsInRole("Admin"))
                            {


                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/AdminAccount/AllUsers" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bütün Kullanıcılar</p>
                                    </a>
                                </li>
                            </ul>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/AdminAccount/AddUser" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Yeni Kullanıcı Oluştur</p>
                                    </a>
                                </li>
                            </ul>
                            }
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    Kategori İşlemleri
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/AdminCategory/GetCategoryList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Ana Kategoriler</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminSubCategory/GetSubCategoryList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Alt Kategoriler</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminCompany/GetCompanyList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Firmalar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminModel/GetModelList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Modeller</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminEngine/GetEngineList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Motorlar</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie"></i>
                                <p>
                                    Araç İşlemleri
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="/AdminProduct/GetCategory" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Araç Ekle</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminProduct/GetProductList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Araç Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminProduct/GetShowCaseList" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Vitrin Listesi</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Log/LogOut" class="nav-link">
                                <i class="far fa-sign-language"></i>
                                <p>
                                    Çıkış Yap
                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>

            </div>

        </aside>


        <div class="content-wrapper">

            <div class="content-header">
                <div class="content">

                    @RenderBody()
                </div>
            </div>

        </div>

    </div>

    <script src="~/Templates/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>

    <script src="~/Templates/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Templates/AdminLTE-3.0.4/dist/js/adminlte.js"></script>


    <script src="~/Templates/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Templates/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/Templates/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
</body>
</html>
