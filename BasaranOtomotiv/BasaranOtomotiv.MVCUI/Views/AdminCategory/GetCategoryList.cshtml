@using BasaranOtomotiv.Entities.Concerete
@model List<Category>
@{
    ViewBag.Title = "GetCategoryList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Kategoriler</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Kategori Adı
                            </th>
                            <th style="width: 30%">
                                Kategori Durumu
                            </th>
                            <th style="width: 40%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CategoryId
                                </td>
                                <td>
                                    <a>
                                        @item.CategoryName
                                    </a>
                                </td>
                                <td>
                                    @if (item.CategoryActivity)
                                    {
                                        <span class=" badge badge-success" style="margin-left:10px">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class=" badge badge-danger" style="margin-left:10px">Pasif</span>
                                    }

                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/AdminCategory/UpdateCategory/@item.CategoryId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    @if (item.CategoryActivity)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/AdminCategory/UpdateCategoryActivity/@item.CategoryId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success btn-sm" href="/AdminCategory/UpdateCategoryActivity/@item.CategoryId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a class="btn btn-primary btn-sm" href="/AdminCategory/AddCategory">
                    <i class="fas fa-folder">
                    </i>
                    Yeni Kategori Ekle
                </a>

            </div>
            <!-- /.card-body -->
        </div>
    </section>
</body>
</html>


