@using BasaranOtomotiv.Entities.Concerete
@model List<Company>
@{
    ViewBag.Title = "GetCompanyList";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1></h1>
                </div>
            </div>
        </div>
    </section>


    <section class="content">


        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Firmalar</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Firma Adı
                            </th>
                            <th style="width: 20%">
                                Firma Durumu
                            </th>
                            <th style="width: 20%">
                                Üst Kategorisi
                            </th>
                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CompanyId
                                </td>
                                <td>
                                    <a>
                                        @item.CompanyName
                                    </a>
                                </td>
                                <td>
                                    @if (item.CompanyActivity)
                                    {
                                        <span class=" badge badge-success" style="margin-left:10px">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class=" badge badge-danger" style="margin-left:10px">Pasif</span>
                                    }

                                </td>
                                <td>
                                    @item.SubCategory.SubCategoryName
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" href="/AdminCompany/UpdateCompany/@item.CompanyId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Güncelle
                                    </a>
                                    @if (item.CompanyActivity)
                                    {
                                        <a class="btn btn-danger btn-sm" href="/AdminCompany/UpdateCompanyActivity/@item.CompanyId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Pasif Yap
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-success btn-sm" href="/AdminCompany/UpdateCompanyActivity/@item.CompanyId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Aktif Yap
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a class="btn btn-primary btn-sm" href="/AdminCompany/AddCompany">
                    <i class="fas fa-folder">
                    </i>
                    Firma Ekle
                </a>

            </div>

        </div>
    </section>
</body>
</html>

